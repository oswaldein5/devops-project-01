{
    "name": "oswaldo/demo-php-app",
    "description": "A simple PHP web application with unit tests",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "php-app/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true
}